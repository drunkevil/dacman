<section class="post" itemscope itemprop="blogPost">
  <% if (item.link) { %> 
    <a href="<%- item.link %>" target="_blank"> 
  <% } else{ %>
    <a href="<%- config.root %><%- item.path %>" title="<%= item.title %>" itemprop="url">
  <% } %>

    <time datetime="<%= date_xml(item.date) %>" itemprop="datePublished"><%= item.date.format(config.date_format) %></time>

    <h1 itemprop="name"><% if (item.title) { %><%= item.title %><% }else{ %>&nbsp;<% } %> (<span class="ds-thread-count" data-thread-key="<%- item.path %>" data-count-type="comments"></span>) </h1>

  </a>
</section>