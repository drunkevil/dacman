<!DOCTYPE HTML>
<html <% if (config.language) { %>lang="<%= config.language %>"<% } %>>
<head>
  <meta charset="UTF-8">
  <%
  var title = page.title;

  if (is_archive()){
    title = '归档';

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = '分类: ' + page.category;
  } else if (is_tag()){
    title = '标签: ' + page.tag;
  }
  %>
  <title><% if (title){ %><%= title %> | <% } %><%= "drunkevil - 闫志伟的个人日志" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no">
  <meta name="generator" content="Hexo" />
  <% if (config.author){ %><meta name="author" content="<%= config.author %>"><% } %>
  <% if (page.keywords){ %><meta name="keywords" content="<%= page.keywords %>"><% } %>
  <% if (theme.rss){ %><link rel="alternative" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml"><% } %>
  <% if (theme.favicon){ %><link rel="icon" href="<%- config.root %><%- theme.favicon %>"><% } %>
  <%- css('css/style') %>

</head>
